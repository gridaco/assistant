{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2019", "es2017", "es7", "es6", "dom", "dom.iterable"],
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "../node_modules/@figma"
    ]
  },
  "exclude": ["node_modules", "dist", "example", "tests"]
}
